<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="/css/admin_styles.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/admin.js"></script>
    <title>Admin</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-custom">
        <div class="container">
            <div class="pagename">
                <img class="logo d-inline-block align-text-center" src="/img/logo.png" />
                ADMIN
            </div>
            <div class="alignR">
                <a href="./" class="nav-link">Sign Out</a>
            </div>
        </div>

    </nav>


    <div class="spacer"></div>
    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="products-tab" data-toggle="tab" href="#products" role="tab" aria-controls="products" aria-selected="true">Manage Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">Manage Users</a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="products" role="tabpanel" aria-labelledby="products-tab">
                        <div class="spacer"></div>
                        <table id="productstable" class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Item No.</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Company</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Tags</th>
                                    <th scope="col">imgURL</th>
                                    <th scope="col">Item Desc.</th>
                                    <th scope="col">Rating</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr id="proddata">
                                    <td>{{itemNo}}</td>
                                    <td>{{name}}</td>
                                    <td>{{company}}</td>
                                    <td>{{Quantity}}</td>
                                    <td>{{Price}}</td>
                                    <td>{{tags}}</td>
                                    <td>{{imgURL}}</td>
                                    <td>{{itemDesc}}</td>
                                    <td>{{rating}}</td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm delprod">DEL</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div class="spacer"></div>
                        <form id="prodform">
                            <div class="d-grid gap-2">
                                <input type="number" name="itemno" id="itemno" placeholder="Item No." />
                                <input type="text" name="prodname" id="prodname" placeholder="Product Name" />
                                <input type="text" name="company" id="company" placeholder="Company" />
                                <input type="number" name="qty" id="qty" placeholder="Quantity" />
                                <input type="number" name="price" id="price" placeholder="Price" />
                                <input type="text" name="tags" id="tags" placeholder="Tags (format: tag1 tag2 tag3)" />
                                <input type="text" name="imgurl" id="imgurl" placeholder="Image URL" />
                                <input type="text" name="itemdesc" id="itemdesc" placeholder="Item Description" />
                            </div>
                        </form>

                        <div class="spacer"></div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success" id="addprod" type="button">Add Product</button>
                            <button class="btn btn-primary" id="editprod" type="button">Edit Product</button>
                        </div>
                        <p class="text-center" id="msg"></p>
                    </div>

                    <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
                        <div class="spacer"></div>
                        <table id="userstable" class="table table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">imgURL</th>
                                    <th scope="col">Card No</th>
                                    <th scope="col">sNo</th>
                                    <th scope="col">ExpDate</th>
                                    <th scope="col">address</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>{{fn}}</td>
                                    <td>{{ln}}</td>
                                    <td>{{gender}}</td>
                                    <td>{{email}}</td>
                                    <td>{{imgURL}}</td>
                                    <td>{{ccNo}}</td>
                                    <td>{{sNo}}</td>
                                    <td>{{ExpDate}}</td>
                                    <td>{{address}}</td>
                                    <td>
                                        <button type="button" class="btn btn-danger btn-sm deluser">DEL</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <!--For DataTables-->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.15/api/row().show().js"></script>

    <script>
        $(document).ready(function() {
            $('#userstable').DataTable();
            $('#productstable').DataTable();
        } );
    </script>

</body>
</html>